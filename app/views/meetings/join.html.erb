<% unless @meeting
	@meeting = Meeting.new
	@meeting.id = -1
	@meeting.token = params['token']
	@meeting.title = 'Ad-hoc Meeting'
end
%>

<%= javascript_tag do %>
jQuery(function() {
window.chatController = new Chat.Controller("<%= request.host %>:<%= request.port %>/websocket",true);
<!-- alert(window.chatController); -->
})
<% end %>

<script type="text/javascript">
  var meetingToken =  "<%= @meeting.token %>";
  var userToken = <%= current_user ? "\"".html_safe+current_user.token+"\"".html_safe : "null" %>;
  var userName = <%= current_user ? "\"".html_safe+current_user.username+"\"".html_safe : "null" %>;
</script>

<h2><%= @meeting.title %></h2>

<div class="container">
	<div class="row">
		<div class="span8" id="streams">
			<video autoplay="autoplay" id="my-stream" class="span3 stream my-stream"/>
			<video autoplay="autoplay" id="remote-stream-tmp" class="span3 stream remote-stream"/>
		</div>

		<!--chat box start-->
		<div class="span3 offset1" style="border:0px;border-color:#000000;border-style:solid">
			<div class="accordion" id="controlBox" style="margin:0px;padding:0px">
				<div class="accordion-group">
					<div class="accordion-heading">
						<a class="accordion-toggle" data-toggle="collapse" data-parent="#controlBox" href="#chat"> Chat </a>
					</div>
					<div id="chat" class="accordion-body collapse" style="height: 0px; ">
						<div id="chatDiv" style="height:200px;overflow:scroll;padding-bottom: 10px;">
							<div class="messages" style="width:200px;overflow:auto;word-wrap: break-word;">
								<label class="label label-info" id ='current_user' ><%= current_user.username%></label>:&nbsp;&nbsp;Hello!
							</div>
							
						</div>
						<br class="bar-info" />
						<select id ="user-list" class="to-chat">
							<option class=""> EveryOne </option>
							<option class=""> two </option>
						</select>
						<textarea type="text" class="input-xlarge" id="message" style="width:200px"></textarea>
						<button id="send" class="btn btn-primary hide">
							Send
						</button>
					</div>
				</div>


			</div>

			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#controlBox" href="#participant-list"> Participants</a>
				</div>
				<div id="participant-list" class="accordion-body collapse in">
					<div class="accordion-inner">
  					<div class="participant-list-user me">
  						<ul class="btn-group btn-group-vertical dropdown-submenu" >
						<li class="btn">
							Active
						</li>
						</ul>
  					</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--chat box end-->
</div>
<% if @meeting.id == -1 %>
<div class="input-append">
	<b>Notify via e-mail:</b>
	<%= form_tag notify_url(@meeting), :method => :post do %>
		<%= hidden_field(:meeting, :token)%>
		<%= text_field(:email, :recipients, :class => 'span2') %>
		<%= submit_tag "Invite others", :class => 'btn' %>
	<% end %>
</div><br />
<% end %>
<%= link_to 'Back', meetings_path, :class => 'btn' %>



