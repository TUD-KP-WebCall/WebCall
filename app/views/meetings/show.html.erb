<% @emails = String.new %>
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @meeting.title %>
</p>

<p>
  <b>Startdate:</b>
  <%= @meeting.startDate %>
</p>

<p>
  <b>Expectedduration:</b>
  <%= @meeting.expectedDuration %>
</p>

<p>
  <b>Description:</b>
  <%= @meeting.description %>
</p>

<p>
  <b>Private:</b>
  <%= @meeting.private %>
</p>

<p>
	<b>Token:</b>
	<%= @meeting.token%>
</p>

<p>
	<b>Notify via e-mail:</b>
	<%= form_tag notify_url(@meeting), :method => :post do %>
		<%= text_field(:email, :recipients)%>
		<%= submit_tag "Notify" %>
	<% end %>
</p>

<%= link_to 'Join', conference_url(@meeting.token) %> |
<%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>
