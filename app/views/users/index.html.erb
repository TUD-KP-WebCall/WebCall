<% provide(:title, "Users List") %>
<h1>Listing users</h1>
<br class="bar" />
<table class="table table-hover">
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Username</th>
    <th>Email</th>
    <th>Token</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.firstName %></td>
    <td><%= user.lastName %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.token %></td>
    <td><button class="btn"><%= link_to 'Show', user%></button>
    	<button class="btn"><%= link_to 'Edit', edit_user_path(user) %></button>
    	<button class="btn"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </td>
  </tr>
<% end %>
</table>
